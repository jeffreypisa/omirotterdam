<a href="{{ item.link }}" target="{{ item.link.target}}" class="tease tease-blog noline mb-30 d-block">
	<div class="item">
		<div class="image-holder ratio-16x9 mb-0">
			<div class="image" style="background-image: url({{ Image(item.thumbnail).src }})"></div>
		</div>
		<div class="box">
			<h6 class="mb-1">{{ item.title }}</h6>
			{{ item.date }}
		</div>
	</div>
</a>