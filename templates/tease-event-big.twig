<a href="{{ item.link }}" target="{{ item.link.target}}" class="tease tease-event-big noline">
	<div class="item">
		<div class="image-holder overlay-gradient ratio-16x9 mb-30">
			<div class="image" style="background-image: url({{ Image(item.thumbnail).src }})"></div>
			<div class="content">
				<h3 class="h1 mb-2">{{ item.title }}</h3>
				<h3 class="mb-0 weight-400"> {% if item.naam %}- {{ item.naam }} <br>{% endif %} {{ item.van_tot }} </h3>
				
				<div class="read-more h4 mb-0">{% if lang == 'nl_NL' %}Lees meer{% else %}Read more{% endif %}  <i class="fas fa-arrow-right"></i></div>
				
				{% set the_terms = item.get_terms() %}
								
				{% for the_term in the_terms %}	
					{% if the_term.taxonomy == 'paststory_category' or the_term.taxonomy == 'events_category' %}
						<div class="badge {{ the_term.tekstkleur }}" style="background-color: {{ the_term.kleur }}"> {{ the_term.title }} </div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
</a>