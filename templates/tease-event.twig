<a href="{{ item.link }}" target="{{ item.link.target}}" class="tease tease-event noline">
	<div class="item">
		<div class="image-holder overlay-gradient ratio-16x9 mb-30">
			<div class="image" style="background-image: url({{ Image(item.thumbnail).src|resize(1024) }})"></div>
			<div class="content">
				<h3 class="h6 mb-1">{{ item.title }}</h3>
				<p class="mb-0"> {% if item.naam %}<span class="d-none d-lg-block">{{ item.naam }} <br></span>{% endif %} {{ item.van_tot }} </p>
				
				<div class="read-more weight-600">{% if lang == 'nl_NL' %}Lees meer{% else %}Read more{% endif %} <i class="fas fa-arrow-right"></i></div>
				
				{% set the_terms = item.get_terms() %}
				
				{% for the_term in the_terms %}	
					{% if the_term.taxonomy == 'paststory_category' or the_term.taxonomy == 'events_category' %}
						<div class="badge {{ the_term.tekstkleur }}" style="background-color: {{ the_term.kleur }}"> {{ the_term.title }} </div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
</a>