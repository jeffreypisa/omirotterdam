<section id="section{{ sectionno }}" class="mod-blog {{ item.achtergrond }} {% if item.achtergrond == 'bg-orange' %}text-white{% endif %}" data-scroll-section>
	<div class="container anime-fadein">
		<div class="row">
			<div class="col-md-10 offset-md-1 text-center">
				{% if item.titel %}
					<h2> {{ item.titel }} </h2>
				{% endif %}
			</div>
		</div>
	</div>
	{% if item.artikelen %}
		<div class="container-fluid">
			<div class="row">
				{% for item in item.artikelen|slice(0,3) %}
					<div class="col-md-4">
						{% include ['tease-blog.twig'] %}
					</div>
				{% endfor %}
			</div>
		</div>
	{% endif %}  
	<div class="text-center mt-4">
		<a href="{{ site.link }}/events" class="btn btn-dark"> Meer blogs </a>
	</div>
</section>