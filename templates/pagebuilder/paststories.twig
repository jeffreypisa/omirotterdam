<section id="section{{ sectionno }}" class="mod-paststories {{ item.achtergrond }} {% if item.achtergrond == 'bg-orange' %}text-white{% endif %}" data-scroll-section>
	<div class="container">
		<div class="row">
			<div class="col-md-10 offset-md-1 text-center">
				{% if item.titel %}
					<h2> {{ item.titel }} </h2>
				{% endif %}
			</div>
		</div>
	</div>
	{% if item.weergave == 'recent' %}
		<div class="container anime-fadein">
			<div class="row justify-content-md-center">
				{% for item in paststories %}
					<div class="col-md-6">
						{% include ['tease-event.twig'] %}
					</div>
				{% endfor %}
			</div>
		</div>
	{% else %}
		{% if item.artikelen %}
			<div class="container anime-fadein">
				<div class="row justify-content-md-center">
					{% for item in item.artikelen|slice(0,2) %}				
						<div class="col-md-6">
							{% include ['tease-event.twig'] %}
						</div>
					{% endfor %}
				</div>
			</div>
		{% endif %}
	{% endif %}
	<div class="text-center mt-4">
		{% if lang == 'nl_NL' %}
			<a href="{{ site.link }}/past-stories" class="btn btn-light"> 
				Meer stories 
			</a>
		{% else %}
			<a href="{{ site.link }}/en/past-stories-2" class="btn btn-light"> 
				More stories 
			</a>
		{% endif %}
	</div>
</section>