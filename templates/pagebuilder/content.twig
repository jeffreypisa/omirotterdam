<section id="section{{ sectionno }}" class="mod-content {{ item.achtergrond }} {% if item.achtergrond == 'bg-orange' %}text-white{% endif %}"  data-scroll-section>
	<div class="container anime-fadein">
		<div class="row">
			<div class="col-md-10 offset-md-1 col-xl-8 offset-xl-2 font-bigger text-center">
				{% if item.titel %}
					<h2> {{ item.titel }} </h2>
				{% endif %}
				{% if item.tekst %}
					{{ item.tekst }}
				{% endif %}
				{% if item.link %}
					<a class="btn btn-primary d-none d-md-inline-block" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ item.link.title }}</a>
				{% endif %}
			</div>
		</div>
    </div>
</section>