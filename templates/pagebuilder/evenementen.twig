{% if item.achtergrond == 'bg-orange' %}
	{% set knopkleur = 'btn-light' %}
{% else %}
	{% set knopkleur = 'btn-dark' %}
{% endif %}

<section id="section{{ sectionno }}" class="mod-evenementen {{ item.achtergrond }} {% if item.achtergrond == 'bg-orange' %}text-white{% endif %}" data-scroll-section>
	{% if item.titel %}
		<div class="container anime-fadein">
			<div class="row">
				<div class="col-md-10 offset-md-1 text-center">
					<h2> {{ item.titel }} </h2>
				</div>
			</div>
		</div>
	{% endif %}
	{% if item.primetime %}
		{% set primetime = 'true' %}
	{% endif %}
	{% if item.weergave == 'custom' %}
		<div class="container">
			<div class="row justify-content-lg-center {% if primetime == 'true' %}primetime js-slick-events{% endif %}">
				{% for item in item.evenementen|slice(0,3) %}
					{% if primetime == 'true' and loop.first %}
						<div class="item col-12">
							{% include ['tease-event-big.twig'] %}
						</div>
					{% else %}
						<div class="item col-lg-6">
							{% include ['tease-event.twig'] %}
						</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	{% else %}
		<div class="container">
			{% if primetime == 'true' %}
				<div class="row primetime js-slick-events">
					{% for item in evenementen %}
						{% if primetime == 'true' and loop.first %}
							<div class="item col-12">
								{% include ['tease-event-big.twig'] %}
							</div>
						{% else %}
							<div class="item col-lg-6">
								{% include ['tease-event.twig'] %}
							</div>
						{% endif %}
					{% endfor %}
				</div>
			{% else %}
				<div class="row">
					{% for item in evenementen|slice(0,2) %}
						<div class="col-lg-6">
							{% include ['tease-event.twig'] %}
						</div>
					{% endfor %}
				</div>
			{% endif %}
		</div>
	{% endif %}  
	<div class="text-center mt-4">
		{% if lang == 'nl_NL' %}
			<a href="{{ site.link }}/evenementen" class="btn {{ knopkleur }}"> 
				Meer evenementen
			</a>
		{% else %}
			<a href="{{ site.link }}/en/events" class="btn {{ knopkleur }}"> 
				More events 
			</a>
		{% endif %}
	</div>
</section>